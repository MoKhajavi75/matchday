{
  "name": "matchday",
  "version": "1.0.0",
  "description": "Local web app for managing FIFA matches with League and Cup formats",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prettier": "prettier -c . --config .prettierrc.json",
    "format": "prettier -w . --config .prettierrc.json",
    "check-types": "tsc --project tsconfig.json",
    "prepare": "[ -n \"$CI\" ] || husky"
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:MoKhajavi75/matchday.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^25.2.0",
    "husky": "^9.1.7",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
